# ============================================
# Canventory - Environment Configuration
# ============================================

# Application
DEBUG=false

# Database
## SQLite Configuration
# DATABASE_URL=sqlite+aiosqlite:///./data/canventory.db

# PostgreSQL Configuration (Using asyncpg driver)
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@postgres:5432/DATABASE
POSTGRES_USER=USER
POSTGRES_PASSWORD=PASSWORD
POSTGRES_DB=DATABASE

# Security
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
CORS_ORIGINS=["*"]

# File uploads
IMAGE_STORAGE=filesystem
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=5242880

# Expiration alert thresholds (days)
EXPIRATION_WARNING_DAYS=7
EXPIRATION_CRITICAL_DAYS=3
CHECK_EXPIRATION_INTERVAL_HOURS=1

# Email Notifications (Optional)
SMTP_ENABLED=false
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
